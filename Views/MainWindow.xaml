<Window x:Class="ProiectPractica.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProiectPractica.Views"
        mc:Ignorable="d"
        Title="Car Leasing App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
            <Button Content="Available Cars" Margin="10" Width="150" Click="AvailableCarsButton_Click"/>
            <Button Content="Current Contracts" Margin="10" Width="150" Click="CurrentContractsButton_Click"/>
            <Button Content="Log in" Margin="10" Width="150" Click="LogoutButton_Click"/>
        </StackPanel>
        <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
