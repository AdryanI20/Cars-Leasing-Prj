<Window x:Class="ProiectPractica.Views.LeaseCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProiectPractica.Views"
        mc:Ignorable="d"
        Title="Lease Car" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Lease Car" FontSize="20" Margin="0,20,0,10" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Date:" Margin="10" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="10" VerticalAlignment="Center" MinWidth="120"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="End Date:" Margin="10" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding EndDate}" Margin="10" VerticalAlignment="Center" MinWidth="120"/>
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Cancel" Width="100" Margin="0,0,10,0" Command="{Binding CancelCommand}"/>
            <Button Content="Confirm Lease" Width="100" Command="{Binding LeaseCommand}"/>
        </StackPanel>
    </Grid>
</Window>
