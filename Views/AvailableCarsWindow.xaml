<Page x:Class="ProiectPractica.Views.AvailableCarsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ProiectPractica.Views"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="700"
      Title="AvailableCarsWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Available Cars" FontSize="20" Margin="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0"/>
            <ComboBox x:Name="FilterComboBox" Width="150" Margin="0,0,10,0">
                <ComboBoxItem Content="Price (Low to High)"/>
                <ComboBoxItem Content="Price (High to Low)"/>
                <ComboBoxItem Content="Year (Newest First)"/>
                <ComboBoxItem Content="Year (Oldest First)"/>
            </ComboBox>
            <Button Content="Apply" Width="100" Click="ApplyFilterButton_Click"/>
        </StackPanel>
        <ListView x:Name="AvailableCarsListView" Margin="10" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Image" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Stretch="Fill" Source="{Binding ImageUri}" Height="50" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Model" Width="150" DisplayMemberBinding="{Binding Model}"/>
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Price}"/>
                    <GridViewColumn Header="Year" Width="100" DisplayMemberBinding="{Binding Year}"/>
                    <GridViewColumn Header="Actions" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Lease" Click="LeaseButton_Click" Tag="{Binding CarId}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
