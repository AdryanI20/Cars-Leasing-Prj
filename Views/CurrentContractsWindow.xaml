<Page x:Class="ProiectPractica.Views.CurrentContractsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ProiectPractica.Views"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="700"
      Title="CurrentContractsWindow">
    <Grid>
        <TextBlock Text="Current Contracts" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
        <ListView x:Name="CurrentContractsListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Car Model" Width="150" DisplayMemberBinding="{Binding CarModel}"/>
                    <GridViewColumn Header="Start Date" Width="100" DisplayMemberBinding="{Binding StartDate}"/>
                    <GridViewColumn Header="End Date" Width="100" DisplayMemberBinding="{Binding EndDate}"/>
                    <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
